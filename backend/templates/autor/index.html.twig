{% extends 'base.html.twig' %}

{% block title %}Autor index{% endblock %}

{% block body %}
    <h1>Autor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Autor_id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Fecha_nacimiento</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for autor in autors %}
            <tr>
                <td>{{ autor.autorId }}</td>
                <td>{{ autor.nombre }}</td>
                <td>{{ autor.apellido }}</td>
                <td>{{ autor.fechaNacimiento ? autor.fechaNacimiento|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_autor_show', {'autor_id': autor.autor_id}) }}">show</a>
                    <a href="{{ path('app_autor_edit', {'autor_id': autor.autor_id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_autor_new') }}">Create new</a>
{% endblock %}
