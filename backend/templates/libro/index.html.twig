{% extends 'base.html.twig' %}

{% block title %}Libro index{% endblock %}

{% block body %}
    <h1>Libro index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Libro_id</th>
                <th>Titulo</th>
                <th>Isbn</th>
                <th>Fecha_publicacion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for libro in libros %}
            <tr>
                <td>{{ libro.libroId }}</td>
                <td>{{ libro.titulo }}</td>
                <td>{{ libro.isbn }}</td>
                <td>{{ libro.fechaPublicacion ? libro.fechaPublicacion|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_libro_show', {'libro_id': libro.libro_id}) }}">show</a>
                    <a href="{{ path('app_libro_edit', {'libro_id': libro.libro_id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_libro_new') }}">Create new</a>
{% endblock %}
